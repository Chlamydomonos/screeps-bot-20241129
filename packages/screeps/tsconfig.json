{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"]
}
